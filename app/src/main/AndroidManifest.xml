<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bsnews">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme.BSNews">
        <activity
            android:name=".MainActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Category.Business"
            android:label="Business" />
        <activity
            android:name=".Category.Entertainment"
            android:label="Entertainment" />
        <activity
            android:name=".Category.Health"
            android:label="Health" />
        <activity
            android:name=".Category.Sports"
            android:label="Sports" />
        <activity
            android:name=".Category.Technology"
            android:label="Technology" />
        <activity
            android:name=".DetailActivity"
            android:label="Detail News" />
        <activity
            android:name=".About"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopUp" />
    </application>

</manifest>